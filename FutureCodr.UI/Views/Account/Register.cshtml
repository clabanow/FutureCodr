@model FutureCodr.UI.Models.Authentication.RegisterViewModel
@{
    ViewBag.Title = "Register";
}

<div class="account-div login-register-div">
    <span class="admin-header">@ViewBag.Title.</span>

    @using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
    {
        @Html.AntiForgeryToken()
        <h4>Create a new account.</h4>
        <hr />
        @Html.ValidationSummary(true)
        <div class="form-group">
            <span class="account-label">Username</span>
            <div class="col-md-8">
                @Html.TextBoxFor(m => m.UserName, new { @class = "form-input-ang" })
                @Html.ValidationMessageFor(m => m.UserName, string.Empty, new { @class = "ng-error-msg" })
            </div>
        </div>
        <div class="form-group">
            <span class="account-label">Password</span>
            <div class="col-md-8">
                @Html.PasswordFor(m => m.Password, new { @class = "form-input-ang" })
                @Html.ValidationMessageFor(m => m.Password, string.Empty, new { @class = "ng-error-msg" })
            </div>
        </div>
        <div class="form-group">
            <span class="account-label">Confirm Password</span>
            <div class="col-md-8">
                @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-input-ang" })
                @Html.ValidationMessageFor(m => m.ConfirmPassword, string.Empty, new { @class = "ng-error-msg" })
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" class="btn slim-btn" value="Register" style="margin-left: 37px"/>
            </div>
        </div>
    }
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
