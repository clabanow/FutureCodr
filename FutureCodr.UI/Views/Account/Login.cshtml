@model FutureCodr.UI.Models.Authentication.LoginViewModel

@{
    ViewBag.Title = "Log in";
}

<div class="account-div login-register-div">
    <span class="admin-header">@ViewBag.Title.</span>
    <div class="row">
        <div class="col-md-8">
            <section id="loginForm">
                @using (Html.BeginForm("Login", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
                {
                    @Html.AntiForgeryToken()
                    <h4>Use a local account to log in.</h4>
                    <hr />
                    @Html.ValidationSummary(true)
                    <div class="form-group">
                        <span class="account-label">Username</span>
                        <div class="col-md-8">
                            @Html.TextBoxFor(m => m.UserName, new { @class = "form-input-ang account-input" })
                            @Html.ValidationMessageFor(m => m.UserName, string.Empty, new { @class = "ng-error-msg" })
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="account-label">Password</div>
                        <div class="col-md-8">
                            @Html.PasswordFor(m => m.Password, new { @class = "form-input-ang account-input" })
                            @Html.ValidationMessageFor(m => m.Password, string.Empty, new { @class = "ng-error-msg" })
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-offset-3 col-md-10">
                            <div class="checkbox" style="margin-left: 36px">
                                @Html.CheckBoxFor(m => m.RememberMe)
                                @Html.LabelFor(m => m.RememberMe)
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-offset-3 col-md-10">
                            <input type="submit" value="Log in" class="btn slim-btn" style="margin-left: 36px" />
                        </div>
                    </div>
                    <p>
                        @Html.ActionLink("Register", "Register") if you don't have a local account.
                    </p>
                }
            </section>
        </div>
    </div>
</div>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}