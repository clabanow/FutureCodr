@{
    ViewBag.Title = "ContactForms";
}

<div class="admin-page" ng-app="contactForms" ng-controller="ContactFormsCtrl">
    <div class="admin-div">
        <div class="admin-header-div">
            <span class="admin-header">Contact Forms</span>
        </div>

        <table class="table admin-table">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Name</th>
                    <th>Email</th>
                    <th>Message</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
                <tr ng-repeat="form in contactForms">
                    <td>{{ form.ContactFormID }}</td>
                    <td>{{ form.Name }}</td>
                    <td>{{ form.Email }}</td>
                    <td>{{ form.CutMessage }}</td>
                    <td><i class="glyphicon glyphicon-trash" ng-click="showAreYouSure(form.ContactFormID, form.FullMessage)"></i></td>
                </tr>
            </tbody>
        </table>
    </div>

    <div class="admin-div" ng-show="areYouSure">
        <h4>Do you want to delete this?</h4>
        <p>{{ message }}</p>
        <button class="btn slim-btn cancel-btn" ng-click="hideAreYouSure()">Cancel</button>
        <button class="btn slim-btn" ng-click="delete(id)">Delete</button>
    </div>
</div>

@section AdminMenu
{
    @Html.Partial("_AdminFloater")
}
@section scripts{
    <script src="~/Scripts/angular.min.js"></script>
    <script src="~/Scripts/angular-route.js"></script>
    <script src="~/Scripts/angular/contactForms/contactFormsModule.js"></script>
    <script src="~/Scripts/angular/contactForms/contactFormsFactory.js"></script>
    <script src="~/Scripts/angular/contactForms/ContactFormsCtrl.js"></script>
}
