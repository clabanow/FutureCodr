
@{
    ViewBag.Title = "BootcampTechnology";
}

<div class="admin-page" ng-app="bootcampTechnology" ng-controller="BootcampTechnologyCtrl">
    <div class="admin-div">
        <div class="admin-header-div">
            <h2 class="admin-header">Bootcamp/Technology</h2>
            <button class="btn slim-btn admin-header-btn" ng-click="showAddBootcampTechnology()">Add Bootcamp Technology</button>
        </div>

        <table class="table admin-table">
            <thead>
                <tr>
                    <th>Bootcamp</th>
                    <th>Technology</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
                <tr ng-repeat="item in bootcampTechnologies | orderBy: bootcampTechnology.BootcampName">
                    <td>{{ item.BootcampName }}</td>
                    <td>{{ item.Technology }}</td>
                    <td><i class="glyphicon glyphicon-trash" ng-click="showConfirmDelete(item.BootcampTechnologyId, item.BootcampName, item.Technology)"></i></td>
                </tr>
            </tbody>
        </table>
    </div>
    
    <div class="admin-div" ng-show="addBootcampTechnology">
        <form name="form" class="angular-form" novalidate>
            
            <div class="admin-header-div">
                <span class="admin-header">Add a technology to a bootcamp</span>
            </div>

            <div class="form-group">
                <span class="form-label-ang">Bootcamp</></span>
                <select ng-model="selectedBootcampId" class="default-dropdown ang-control" ng-options="bootcamp.BootcampID as bootcamp.Name for bootcamp in bootcamps" required></select>
            </div>

            <div class="form-group">
                <span class="form-label-ang">Technology</></span>
                <select ng-model="selectedTechnologyId" class="default-dropdown ang-control" ng-options="technology.TechnologyId as technology.Name for technology in technologies" required></select>
            </div>

            <button class="btn slim-btn cancel-btn" ng-click="hide()">Cancel</button>
            <button class="btn slim-btn" ng-click="add()" ng-disabled="form.$invalid">Add</button>

        </form>
    </div>

    <div class="admin-div" ng-show="confirmDelete">
        <p>Are you sure you want to delete {{ technology }} from {{ bootcamp }}?</p>
        <button class="btn slim-btn cancel-btn" ng-click="hide()">Cancel</button>
        <button class="btn slim-btn" ng-click="delete(id)">Delete</button>
    </div>
</div>

@section AdminMenu
{
    @Html.Partial("_AdminFloater")
}

@section scripts {
    <script src="~/Scripts/angular.min.js"></script>
    <script src="~/Scripts/angular/bootcampTechnology/bootcampTechnologyModule.js"></script>
    <script src="~/Scripts/angular/bootcampTechnology/bootcampTechnologyFactory.js"></script>
    <script src="~/Scripts/angular/bootcampTechnology/BootcampTechnologyCtrl.js"></script>
}