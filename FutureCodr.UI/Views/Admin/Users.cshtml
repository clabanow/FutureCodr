
@{
    ViewBag.Title = "Users";
}

<div class="admin-page" ng-app="users" ng-controller="UsersCtrl">
    <div class="admin-div">
        <div class="admin-header-div">
            <span class="admin-header">Users</span>
        </div>

        <table class="table admin-table">
            <thead>
                <tr>
                    <th>Username</th>
                    <th>Delete</th>
                </tr>
            </thead>
            <tbody>
                <tr ng-repeat="user in users">
                    <td>{{ user.Email }}</td>
                    <td><i class="glyphicon glyphicon-trash" ng-click="toggleAreYouSure(user.Email, user.UserID)"></i></td>
                </tr>
            </tbody>
        </table>
    </div>
    
    <div class="admin-div" ng-show="areYouSure">
        <p>Are you sure you want to delete {{ email }}?</p>
        <button class="btn slim-btn cancel-btn" ng-click="hideAreYouSure()">Cancel</button>
        <button class="btn slim-btn" ng-click="delete(id)">Delete</button>
    </div>

</div>

@section AdminMenu
{
    @Html.Partial("_AdminFloater")
}

@section scripts{
    <script src="~/Scripts/angular.min.js"></script>
    <script src="~/Scripts/angular-route.min.js"></script>
    <script src="~/Scripts/angular/users/usersModule.js"></script>
    <script src="~/Scripts/angular/users/usersFactory.js"></script>
    <script src="~/Scripts/angular/users/UsersCtrl.js"></script>
}
